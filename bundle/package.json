{
  "name": "@blox/material",
  "version": "0.6.0",
  "license": "Apache-2.0",
  "description": "Material Components for Angular",
  "author": "The Source Zone",
  "bugs": "https://github.com/src-zone/material/issues",
  "repository": "github:src-zone/material",
  "homepage": "https://blox.src.zone/material",
  "main": "dist/material.umd.js",
  "module": "dist/material.es5.js",
  "types": "dist/material.d.ts",
  "keywords": [
    "angular",
    "material",
    "material components web"
  ],
  "scripts": {
    "clean": "rimraf build dist",
    "ngc": "ngc -p tsconfig.json",
    "bundle": "ts-node --project tools/ngbundler tools/ngbundler/index.ts",
    "copy-types": "cpx build/**/*.d.ts dist/",
    "copy-metadata": "cpx build/material.metadata.json dist/",
    "apidocs": "ts-node --project tools/dgeni tools/dgeni/index.ts",
	"cleansite": "rimraf ../site/node_modules/@blox/material/*",
    "link2site": "cpx package.json ../site/node_modules/@blox/material/ && cpx dist/**/*.* ../site/node_modules/@blox/material/dist/ && cpx src/**/*.* ../site/node_modules/@blox/material/src && cpx apidocs/*.html ../site/node_modules/@blox/material/apidocs",
    "build": "npm run clean && npm run ngc && npm run bundle && npm run copy-types && npm run copy-metadata && npm run apidocs && npm run cleansite && npm run link2site"
  },
  "dependencies": {
    "material-components-web": "^0.25.0"
  },
  "peerDependencies": {
    "@angular/common": ">=4.0.0",
    "@angular/core": ">=4.0.0",
    "@angular/forms": ">=4.0.0",
    "@angular/router": ">=4.0.0",
    "rxjs": ">=5.5.0",
    "zone.js": ">=0.8.0"
  },
  "devDependencies": {
    "@angular/common": "^4.4.4",
    "@angular/compiler": "^4.4.4",
    "@angular/compiler-cli": "^4.4.4",
    "@angular/core": "^4.4.4",
    "@angular/forms": "^4.4.4",
    "@angular/router": "^4.4.4",
    "@types/glob": "^5.0.33",
    "@types/jasmine": "^2.6.2",
    "@types/node": "^8.0.47",
    "@types/rollup": "^0.51.1",
    "@types/selenium-webdriver": "^3.0.8",
    "codelyzer": "^4.0.1",
    "cpx": "^1.5.0",
    "cpy-cli": "^1.0.1",
    "dgeni": "^0.4.9",
    "dgeni-packages": "^0.22.1",
    "glob": "^7.1.2",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-remap-istanbul": "0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "remap-istanbul": "^0.9.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.51.8",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rxjs": "^5.5.2",
    "shelljs": "^0.7.8",
    "source-map-explorer": "^1.4.0",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typedoc": "^0.8.0",
    "typescript": "2.4.2",
    "zone.js": "^0.8.18"
  }
}
