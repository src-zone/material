{
  "name": "@blox/material",
  "version": "0.8.0",
  "license": "Apache-2.0",
  "description": "Material Components for Angular",
  "author": "The Source Zone",
  "bugs": "https://github.com/src-zone/material/issues",
  "repository": "github:src-zone/material",
  "homepage": "https://blox.src.zone/material",
  "main": "dist/material.umd.js",
  "module": "dist/material.es5.js",
  "types": "dist/material.d.ts",
  "keywords": [
    "angular",
    "material",
    "material components web"
  ],
  "scripts": {
    "clean": "rimraf build dist apidocs",
    "ngc": "ngc -p tsconfig.json",
    "bundle": "ts-node --project tools/ngbundler tools/ngbundler/index.ts",
    "copy-types": "cpy \"**/*.d.ts\" ../dist --cwd=build --parents",
    "copy-metadata": "cpy build/material.metadata.json dist/",
    "apidocs": "ts-node --project tools/dgeni tools/dgeni/index.ts",
    "build-noclean": "npm run ngc && npm run bundle && npm run copy-types && npm run copy-metadata && npm run apidocs",
    "build": "npm run clean && npm run build-noclean"
  },
  "dependencies": {
    "material-components-web": "^0.28.0"
  },
  "peerDependencies": {
    "@angular/common": ">=4.0.0",
    "@angular/core": ">=4.0.0",
    "@angular/forms": ">=4.0.0",
    "@angular/router": ">=4.0.0",
    "rxjs": ">=5.5.0",
    "zone.js": ">=0.8.0"
  },
  "devDependencies": {
    "@angular/common": "^5.2.10",
    "@angular/compiler": "^5.2.10",
    "@angular/compiler-cli": "^5.2.10",
    "@angular/core": "^5.2.10",
    "@angular/forms": "^5.2.10",
    "@angular/router": "^5.2.10",
    "@types/glob": "^5.0.35",
    "@types/jasmine": "^2.8.7",
    "@types/node": "^10.0.3",
    "@types/rollup": "^0.54.0",
    "@types/selenium-webdriver": "^3.0.8",
    "codelyzer": "^4.3.0",
    "cpx": "^1.5.0",
    "cpy-cli": "^1.0.1",
    "dgeni": "^0.4.9",
    "dgeni-packages": "^0.22.1",
    "glob": "^7.1.2",
    "jasmine-core": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.2",
    "karma-jasmine": "^1.1.2",
    "karma-mocha-reporter": "^2.2.4",
    "karma-remap-istanbul": "0.6.0",
    "karma-sourcemap-loader": "^0.3.7",
    "remap-istanbul": "^0.11.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rxjs": "^5.5.5",
    "shelljs": "^0.8.1",
    "source-map-explorer": "^1.4.0",
    "ts-helpers": "^1.1.2",
    "ts-node": "^3.3.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "2.4.2",
    "zone.js": "^0.8.26"
  }
}
